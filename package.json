{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "db:migrate:deploy": "turbo run db:migrate:deploy",
    "db:push": "turbo run db:push",
    "db:seed": "turbo run db:seed",
    "api:dev": "pnpm --filter api dev",
    "desktop:dev": "pnpm --filter desktop tauri dev",
    "docker:api:build": "docker build -f apps/api/Dockerfile -t deadlock-api .",
    "docker:api:run": "docker run --rm -p 9000:9000 --env-file .env deadlock-api",
    "docker:api:dev": "docker compose up api --build",
    "docker:api:stop": "docker compose down",
    "docker:api:logs": "docker compose logs -f api",
    "docker": "docker compose up -d",
    "format": "npx ultracite@latest fix",
    "lint": "npx ultracite@latest lint",
    "generate-lang-table": "bun scripts/generate-language-table.ts --update-readme",
    "publish-packages": "turbo run build && changeset version && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "dotenv-cli": "^7.4.4",
    "husky": "^9.1.7",
    "lefthook": "^1.12.3",
    "lint-staged": "^16.1.5",
    "tsx": "4.19.1",
    "turbo": "^2.5.0",
    "typescript": "^5.2.2",
    "ultracite": "5.2.16"
  },
  "engines": {
    "node": ">=18"
  },
  "name": "@deadlock-mods/root",
  "dependencies": {
    "@changesets/cli": "^2.29.6"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.0.2",
      "@types/react-dom": "19.0.2"
    },
    "onlyBuiltDependencies": [
      "@sentry/profiling-node",
      "@swc/core",
      "esbuild",
      "lefthook",
      "sharp"
    ],
    "ignoredBuiltDependencies": [
      "better-sqlite3"
    ]
  },
  "packageManager": "pnpm@10.15.1+sha512.34e538c329b5553014ca8e8f4535997f96180a1d0f614339357449935350d924e22f8614682191264ec33d1462ac21561aff97f6bb18065351c162c7e8f6de67",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "pnpm dlx ultracite format"
    ]
  }
}
